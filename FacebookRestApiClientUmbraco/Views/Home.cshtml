@inherits Umbraco.Web.Mvc.UmbracoViewPage<FacebookRestApiClientUmbraco.Models.FacebookAccountViewModel>
    @using FacebookRestApiClientUmbraco.Controllers
@{
	Layout = "Master.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <h2>Profil</h2>
        <img src="@Model.ImageUrl" onclick="window.location.href = 'http://localhost:60327/Home/FbProfile?id=' + @Model.FbId;" />
        <h4 id="Name">@Model.Name</h4>
        <h4 id="Email">@Model.Email</h4>
        <br />
        <br />

        <h2>Venner</h2>
        @foreach (var friend in Model.friends)
        {
            <img src="@friend.ImageUrl" onclick="window.location.href = 'http://localhost:60327/Home/FbProfile?id=' + @friend.Id;" />
        }
        <br />
        <br />

        <h2>Fotos</h2>
        @foreach (var photo in Model.photos)
        {
            <img src="@photo.ImageUrl" title="Foto id: @photo.Id" style="padding: 2px; width: 100px; height: 100px;" />
        }
    </div>
    <div class="col-md-6">
        <h2>Væg</h2>
        <hr />
        @foreach (var post in Model.posts)
        {
            <p>@post.Time</p>
            <p>@post.Message</p>
            <hr />
        }
    </div>
    <div class="col-md-2">
        <h2>Tilfældig bruger</h2>
        <a href="http://localhost:60327/Home/RandomProfile">Klik her</a>
    </div>

</div>